{
  "pluginAlias": "HomebridgePowrmatic",
  "pluginType": "platform",
  "singular": true,
  "schema": {
    "type": "object",
    "properties": {
      "devices": {
        "type": "array",
        "items": {
          "title": "Device",
          "type": "object",
          "properties": {
            "ipAddress": {
              "title": "IP address (or hostname)",
              "type": "string",
              "placeholder": "192.168.0.7"
            },
            "displayName": {
              "title": "Name",
              "type": "string",
              "placeholder": "Powrmatic Air Conditioner"
            }
          }
        }
      }
    }
  }
}
